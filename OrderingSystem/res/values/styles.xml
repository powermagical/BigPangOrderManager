<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 界面顶部banner的字体 -->
    <style name="headerTextStyle">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#73804055</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">-2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    
    <!-- 界面顶部banner的背景 -->
    <style name="header">
        <item name="android:background">@drawable/header</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50.0dip</item>
    </style>
    
    <!-- 点菜主页面tab部被选中的样式 -->
    <style name="tabItemSelectedStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#30000000</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <!-- 点菜主页面tab部未被选中的样式 -->
    <style name="tabItemUnselectedStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff222222</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#30000000</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <!-- 顶部的返回按钮（一般在左边）的样式 -->
    <style name="TopBackBtn">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/back_btn_bg</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingTop">11.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">11.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45.0dip</item>
        <item name="android:text">返回</item>
    </style>
    
    <!-- 顶部右边按钮的样式 -->
    <style name="TopRightBtn">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_attention_bg</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">11.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">11.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
