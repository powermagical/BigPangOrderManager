<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<LinearLayout android:orientation="horizontal"
    	style="@style/header"
    	android:gravity="center"
    	android:layout_alignParentTop="true"
    	android:id="@+id/tops_caption_layout"
    	>
        <TextView android:id="@+id/tops_caption"
            android:text="排名"
            style="@style/headerTextStyle"/>
    </LinearLayout>
    
	<ScrollView 
	    android:layout_marginTop="10.0dip"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/tops_caption_layout">
	    
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10.0dip"
	        android:id="@+id/tops_items_wrapper">
	        
	        
	    <com.caferestaurant.orderingsystem.app.view.ViewTopItem
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	    
	    <com.caferestaurant.orderingsystem.app.view.ViewTopItem
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	    
	    <com.caferestaurant.orderingsystem.app.view.ViewTopItem
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	    
	    <com.caferestaurant.orderingsystem.app.view.ViewTopItem
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	    	    
	    <com.caferestaurant.orderingsystem.app.view.ViewTopItem
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	    
	    </LinearLayout>
	    
	</ScrollView>
	
	
	<ImageView android:background="@drawable/poster_tab_bg_small" 
 	    	android:layout_width="fill_parent" android:layout_height="wrap_content" 
 	    	android:id="@+id/recommand_ribbon"
 	    	android:layout_below="@id/tops_caption_layout"/>
	
</RelativeLayout>